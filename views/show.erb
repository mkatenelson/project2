<div class="page-wrapper show-page">

<%# RECIPE BY ID %>
<table>
  <tr>
    <td>
      <h2><%= @drink.name %></h2>
        <p>
          <img src="<%= @drink.photo_url %>">
          <h3>Ingredients: <%= @drink.ingredients %></h3>
        <p>
    </td>
    <td valign="top"><%# UPDATE FORM %>
      <h3>Update Recipe</h3>
      <form action='/drinks/<%= "#{@drink.id}" %>' method="post" class="form">
        Name: <br>
        <input type="text" name="drink[name]" value=""
        >
        <br>
        Ingredients: <br>
        <input type="text" name="drink[ingredients]" value=""
        ><br>
        Image URL: <br>
        <input type="text" name="drink[photo_url]" value=""
        ><br>
        <input type="submit" value="Update">
      </form>
    </td>
  <tr>
</table>


<%# DELETE BUTTON %>
<form action="/drinks/<%= @drink.id %>" method="post" class="link">
  <input type="hidden" name="_method" value="delete"/>
  <input type="submit" value="Delete Recipe"/>
</form>

<%# RETURN BUTTON %>
<form method="link" action="/" class="return">
  <input type="submit" value="Back to Drink List">
</form>
