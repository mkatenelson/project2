<%# RECIPE BY ID %>
<h2><%= @drink.name %></h2>
<p>Ingredients: <%= @drink.ingredients %><br>
<a href="/">Back to List</a>
<p>
<br>

<%# UPDATE FORM %>
<h3>Update Recipe</h3>
<form action="/drinks/<%= '#{@drink.id}' %>" method="post" class='update'>
  <label for="drink[name]">Drink:</label>
  <input name="drink[name]" value="Name"
  >
  <br>
  <label for="drink[ingredients]">Ingredients:</label>
  <input name="drink[ingredients]" value="Ingredients"
  ><br>
  <input type="submit" value="Update">
</form>
<br>

<%# DELETE BUTTON %>
<form action="/drinks/<%= @drink.id %>" method="post" class='delete'>
  <input type="hidden" name="_method" value="delete">
  <input type='submit' value="Delete Completely">
</form>
